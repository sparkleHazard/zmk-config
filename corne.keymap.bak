#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// |  ESC |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// |LSHIFT|  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |SHIFT/RET|
//                    |LCTRL| LWR | SPC |   | BKSP| RSE  | LGUI|
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp ESC &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &mt LSHIFT RET 
                  &kp LCTRL &mo 2 &kp SPACE   &kp BSPC &mo 1 &kp LGUI
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// |      |     |     |     |     |     |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |  ,  |  .  |  /  |SHIFT/RET|
//                    | ALT | FUNC| SPC |   | ENT |     |     |
                        bindings = <
   &kp TAB &kp N1 &kp N2 &kp N3 &kp N4 &kp N5      &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &trans    &trans &trans &trans &trans  &trans   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT &trans &trans &trans &trans  &trans   &trans &trans &trans &trans &trans &mt LSHIFT RET
           &kp LALT     &mo 3       &kp SPACE      &kp RET  &trans   &trans
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |   ~  |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |  `  |     |     | "|" |     |   |     |  -  |  =  |  [  |  ]  | "|"  |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT | FUNC|RCTRL|
                        bindings = <
   &kp  TILDE  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &kp GRAVE   &trans &trans   &kp BSLH   &trans      &trans &kp MINUS &kp EQUAL &kp LBKT &kp RBKT &kp NON_US_BSLH
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &mt LSHIFT RET
                    	     &kp LGUI &trans   &kp SPACE   &kp RET   &mo 3    &kp RCTRL
                        >;
                };
		function_layer {
// -----------------------------------------------------------------------------------------
// |      |  F1  |  F2  |  F3  |  F4  |  F5  |   |  F6  |  F7  |  F8  |  F9  |  F10 |  DEL |
// | CTRL |  F11 |  F12 |      |      |      |   |      |      |      |      |      |      |
// |      |      |      |      |      |      |   |      |      |      |      |      |  B/T |
//                      |      |      |      |   |      |      |      |
                        bindings = <
   &trans  &kp F1 &kp F2 &kp F3 &kp F4 &kp F5   &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp DEL 
   &kp LCTRL &kp F11 &kp F12 &trans &trans &trans      &trans &trans &trans &trans &trans &trans
   &trans &trans &trans &trans &trans &trans      &trans &trans &trans &trans &trans &mo 4
               	             &trans &trans &trans      &trans &trans &trans
                        >;
                };
		control_layer {
// -----------------------------------------------------------------------------------------
// | BTCLR|  BT1 |  BT2 |  BT3 |  BT4 |  BT5 |   |      |      |      |      |      |      |
// |      |      |      |      |      |      |   |      |      |      |      |      |      |
// | RESET|BOOTLDR|     |      |      |      |   |      | RESET|BOOTLDR|      |      |      |
//                      |      |      |      |   |      |      |      |
                        bindings = <
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &trans &trans &trans &trans &trans &trans 
   &trans &trans &trans &trans &trans &trans      &trans &trans &trans &trans &trans &trans
   &reset &bootloader &trans &trans &trans &trans      &trans &reset &bootloader &trans &trans &trans
               	             &trans &trans &trans      &trans &trans &trans
                        >;
                };
        };
};
